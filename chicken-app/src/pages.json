{
	"easycom": {
		"autoscan": true,
		"custom": {
			// uni-ui 规则如下配置
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},
	"pages": [ 
		{
			"path": "pages/index/index",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "正新鸡排"
			}
		},
		{
			"path": "pages/login/login",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "登录页"
			}
		},
		{
			"path": "pages/my/my",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "我的"
			}
		},
		{
			"path": "pages/order/order",
			"style": {
				"navigationStyle": "custom", 
				"navigationBarTitleText": "点餐"
			}
		},
		{
			"path": "pages/detail/detail",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "详情"
			}
		},
		{
			"path": "pages/submit/submit",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "提交订单"
			}
		},
		{
			"path": "pages/submit/success",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "提交成功"
			}
		},
		{
			"path": "pages/address/address",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "地址管理"
			}
		},
		{
			"path": "pages/addOrEditAddress/addOrEditAddress",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "新增/修改地址"
			}
		},
		{
			"path": "pages/remark/remark",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "备注"
			}
		},
		{
			"path": "pages/pay/pay",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "支付订单"
			}
		},
		{
			"path": "pages/orderDetail/orderDetail",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "订单详情"
			}
		},
		{
			"path": "pages/history/history",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "历史订单"
			}
		},
		{
			"path": "pages/updateMy/updateMy",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "信息设置"
			}
		}
	],
	// 设置 TabBar
	"tabBar": {
		"color": "#fff",
		"selectedColor": "#f7e293",
		"backgroundColor": "#e42218",
		"borderStyle": "white",
		"list": [
			{
				"text": "首页",
				"pagePath": "pages/index/index",
				"iconPath": "static/tabs/home2.png",
				"selectedIconPath": "static/tabs/home.png"
			},
			{
				"text": "点餐",
				"pagePath": "pages/order/order",
				"iconPath": "static/tabs/buy2.png",
				"selectedIconPath": "static/tabs/buy.png"
			},
			{
				"text": "我的",
				"pagePath": "pages/my/my",
				"iconPath": "static/tabs/my2.png",
				"selectedIconPath": "static/tabs/my.png"
			}
		]
	},
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#e42218",
		"backgroundColor": "#F8F8F8"
	}
}